<body>
    <h1>Cervejas disponíveis  </h1>
    <div id="cervejas"></div>
    
    <script>
        async function carregandoCervejas() {
            try {
                const response = await fetch('https://api.sampleapis.com/beers/ale'); 
                const data = await response.json();
                mostrandoCervejas(data);
            } catch (error) {
                document.getElementById("cervejas").innerHTML = "Erro ao carregar as cervejas";
                console.error(error);
            }
        }

        function mostrandoCervejas(cervejas) {
            const container = document.getElementById("cervejas");
            
            cervejas.forEach(beers => {
                const card = document.createElement("div");
                card.className = "card";
                
                const imagem = beers.image;

                card.innerHTML = `<img src = "${imagem}">
                <h2>${beers.name}</h2>
                <p><b>${beers.price}</b></p>`

                container.appendChild(card);
            });
        }
        carregandoCervejas();
    </script>
</body>
